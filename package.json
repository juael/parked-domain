{
  "name": "parked-domain",
  "version": "0.0.1",
  "private": true,
  "description": "Simple web page to manage parked domains",
  "scripts": {
    "build:clean": "rm -rf dist && mkdir dist",
    "build:elm": "elm make src/Main.elm --optimize --output=./dist/elm.js",
    "build:css": "tailwindcss -i ./src/style.css -o ./dist/style.css --minify",
    "build:html": "cp ./index.html ./dist/index.html",
    "build": "pnpm build:clean && pnpm build:elm && pnpm build:css && pnpm build:html",
    "start:elm": "elm-live ./src/Main.elm --port 8010 --dir=./dist --pushstate -- --output=./dist/elm.js",
    "start:css": "tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "start": "pnpm build:clean && pnpm build:html && concurrently -k -n css,elm -c cyan,magenta \"pnpm start:css\" \"pnpm start:elm\"",
    "format": "elm-format ./src --yes",
    "review": "elm-review",
    "test": "elm-test"
  },
  "keywords": [
    "elm",
    "tailwindcss"
  ],
  "author": "Julian Dawson",
  "license": "MIT",
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.18",
    "concurrently": "^9.2.1",
    "elm": "0.19.1-6",
    "elm-format": "0.8.8",
    "elm-json": "0.2.13",
    "elm-live": "4.0.2",
    "elm-review": "^2.13.5",
    "elm-test": "0.19.1-revision17",
    "tailwindcss": "^4.1.18"
  }
}
